<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="receivable_report_form_view" model="ir.ui.view">
            <field name="name">receivable_report_form_view</field>
            <field name="model">fact.acct.aged.receivable</field>
            <field name="arch" type="xml">
                <form string="Detail" create="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="move_id"/>
                            <h1>
                                <field name="move_id" placeholder="Move" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_trx"/>
                                <field name="partner_id" />
                                <field name="currency_id"/>
                                <field name="balance_total"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="receivable_report_layer_tree" model="ir.ui.view">
        <field name="name">receivable_report_layer_tree</field>
        <field name="model">fact.acct.aged.receivable</field>
        <field name="arch" type="xml">
            <tree default_order="date_trx desc partner_id" create="0">
                <field name="company_id" groups="base.group_multi_company" />
                <field name="date_trx"/>
                <field name="partner_id"/>
                <field name="schema_id" />
                <field name="currency_id"/>
                <field name="move_id"/>
                <field name="balance_total" sum="Balance Total"/>
            </tree>
        </field>
    </record>

    <record id="receivable_report_layer_search" model="ir.ui.view">
        <field name="name">receivable_report_layer_search</field>
        <field name="model">fact.acct.aged.receivable</field>
        <field name="arch" type="xml">
            <search string="Aged Receivable Layer">
                <field name="partner_id"/>
                <filter string="Partner" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
            </search>
        </field>
    </record>

    <record id="receivable_layer_action" model="ir.actions.act_window">
        <field name="name">Aged Receivable Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fact.acct.aged.receivable</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="receivable_report_layer_tree"/>
        <field name="domain"></field>
        <field name="context">{'search_default_group_by_partner_id': 1}</field>
    </record>

    </data>
</odoo>