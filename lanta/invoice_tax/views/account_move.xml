<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account_move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
             <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="account_move_tax" string="Taxes" attrs="{'invisible':[('type','not in', ['out_invoice', 'in_invoice', 'in_refund', 'out_refund', 'out_receipt', 'in_receipt'])]}">
                           <field name="account_tax_ids" mode="tree,kanban" readonly="1" attrs="{'invisible':[('type','not in', ['out_invoice', 'in_invoice', 'in_refund', 'out_refund', 'out_receipt', 'in_receipt'])]}">
                                <tree string="Taxes Detail" readonly="1">
                                    <field name="move_id"/>
                                    <field name="tax_id"/>
                                    <field name="base_tax"/>
                                    <field name="tax_percent"/>
                                    <field name="tax_total"/>
                                </tree>
                           </field>
                    </page>
             </xpath>
            </field>
        </record>
    </data>
</odoo>